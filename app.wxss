/**app.wxss**/
page{
  background:#333;
  font-family:Monospaced Number,Chinese Quote,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,PingFang SC,Hiragino Sans GB,Microsoft YaHei,Helvetica Neue,Helvetica,Arial,sans-serif!important;
}
.page-pd{
  padding:20rpx;
}
/* 图标 */
.icon120{
  width:120rpx;
  height:120rpx;
}
.icon58{
  width:58rpx;
  height:58rpx;
}
.icon40{
  width:40rpx;
  height:40rpx;
}
.icon32{
  width:32rpx;
  height:32rpx;
}


/* 字号 */
.wei{
  font-weight:bold;
}
.size-money{
  font-size:1.5rem;
  line-height:1.5; 
  font-weight: bold;
}
.size-numberone{
  font-size:1.5rem;
  line-height:1.5; 
}
.size-numbertwo{
  font-size:1.3rem;
  line-height:1.5; 
}
.size-titleone{
  font-size:1.2rem;
  line-height: 1.5;
}
.size-titletwo{
  font-size:1rem;
  line-height: 1.5;
}
.size-text{
  font-size:0.8rem;
  line-height: 1.5;
}
.size-tagging{
   font-size:0.6rem;
   line-height: 1.5; 
}

/* 背景颜色 */
.bg-title{
  background-color:#DAB866;
}
.bg-main{
  background-color:#333;
}
.bg-box{
  background-color:#404040;
}
/* 文字颜色 */
.col-title{
  color:#fff;
}
.col-main{
  color:#DAB866;
}
.col-content{
  color:#c6c6c6;
}

.pdr10{
  padding-right:10rpx;
}
.radius{
  border-radius:10px;
}
.radius-uppe{
  border-radius:10px 10px 0 0;
}
.radius-down{
  border-radius:0 0 10px 10px;
}

/* 无相关信息 */
.search-no {
width: 100%;
display: block;
text-align: center;
padding:100rpx 0;
}
.scimg {
width: 300rpx;
height: 350rpx;
display: inline-block;
background-size: 300rpx;
padding-bottom:20rpx;

}
.search-no text{
  color:#c6c6c6;
}
.search-white{
    color:#c6c6c6;
}
.search-black{
    color:#333;
}