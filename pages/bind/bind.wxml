<view>
  <!-- 遮罩层 -->
  <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
  <!-- 弹出层 -->
  <view class="modalDlg" wx:if="{{showModal}}">
    <input placeholder='请输入优惠码' bindinput="setShareByInput" bindconfirm="search" value='{{shareBy}}'></input>
    <!-- <view bindtap="register" class="ok">确定</view> -->
    <button open-type="getUserInfo" class="ok" bindgetuserinfo="bindGetUserInfo">确定</button>
  </view>

  <!-- 遮罩层 -->
  <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModalPhone}}"></view>
  <!-- 弹出层 账号密码登录-->
  <view class="modalDlg" wx:if="{{showModalPhone}}">
    <input placeholder='请输入手机号' bindinput="setPhoneInput" bindconfirm="search" value='{{phone}}'></input>
    <input placeholder='请输入验证码' bindinput="setCodeInput" bindconfirm="search" value='{{code}}'></input>
    <view class="bottom-operate button" bindtap='sendCode'>获取验证码</view>
    <input placeholder='请输入密码' bindinput="setPasswordInput" bindconfirm="search" value='{{password}}'></input>
    <view bindtap="bindPhone" class="ok">确定</view>
  </view>

  <image src="../img/logo.png"></image>
  <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">直接登录</button>
  <button bindtap="bindNumber">绑定优惠码</button>
</view>