
.integral{
  display: flex;
  flex-direction: column;
  border-radius:10px;
  font-size:0.8rem;
  line-height:1.5;
  padding:30rpx;
  background:#2b2b2b;
  color:#c6c6c6;
}
.integral-current{
  display: flex;
  flex-direction: column;
  align-items:center;
  color: #c6c6c6;
 padding: 60rpx 0 40rpx 0;
}
.current1{
  color:#DAB866;
  font-size:2.2rem;
  line-height:1.5;
}
.integral-current1{
  display: flex;
  justify-content: flex-end;
}
.current1-text{
  color:#DAB866;
}
.integral-text{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 10rpx;
  background: #404040;
  margin-top: 20rpx;
  padding: 20rpx;
  font-size: 1rem;
  line-height:1.5;
}
.integral-title{
  display:flex;
  flex-direction: column;
}
.text-title{
  color:#fff;
}
.text-date{
  font-size:0.8rem;
  line-height:1.5;
  padding-top:10rpx;
  color:#c6c6c6;
}
.text-add{
  display: flex;
  align-items: center;
  color:#DAB866;
  font-size:1.3rem;
  line-height:1.5;
}
.text-add-ash{
  color:#c6c6c6;
}
.text-add-left{
  padding-right:10rpx;
}
.footer{
  text-align:center;
  color:#c6c6c6;
  font-size:0.8rem;
  line-height:1.5;
  padding-top:60rpx;
}

/* 我要赚成长值 */
.member-branch{
  background-color: #404040;
  padding:30rpx 30rpx 0 30rpx;
  color: #8b8b8b;
  font-size: 0.8rem;
  margin-top:30rpx;
}
.branch-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.branch-hd{
  font-size:1rem;
  color:#c6c6c6;
}
.branch-text{
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;

}

.branch-text button{
  width: 80px;
  font-size: 0.8rem;
  padding:12rpx 0;
  background: #DAB866;
}

