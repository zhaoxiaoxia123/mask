<view class='page-pd'>
  <view class='integral'>
    <view class='integral-current'>
      <text class='current1'>注册会员</text>
    </view>
    <view class="integral-box">
        <view class="progress-text">
            <view class="progress-left">成长值 2.00<image  class="progress-img" src='../../img/dv.png'></image></view>
            <view class="progress-right">差8.00成长值升级为VIP</view>
        </view>
        <view class="progress-box">
            <progress percent="20" color="#DAB866" active stroke-width="3"  />
        </view>
    </view>
    <view class='integral-current1'>
      <image class="icon32 pdr10" src="../../img/mark@2x.png"></image>
      <text class="current1-text">截止到{{customer.validity?customer.validity:''}}，合计{{customer.growth?customer.growth:0}}成长值将失效 </text>
    </view>
  </view>


