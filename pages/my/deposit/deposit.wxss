.lists {
  padding-top: 30rpx;
  box-sizing: border-box;
}

.list-item {
  padding: 40rpx 20rpx;
  background: #2b2b2b;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 10px;
}

.list-box {
  display: flex;
  flex-direction: row;
}

.column {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.mt {
  margin-top: 20rxp;
}

.radio-group {
  margin-top: 10%;
  padding-right: 10rpx;
}

.list-left {
  width: 200rpx;
}

.list-left image {
  border: 1px solid #4d4d4d;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10px;
}

.list-right {
  width: 480rpx;
  display: flex;
  flex-direction: column;
}

.right-text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #fff;
  font-size: 1rem;
}

.total {
  font-size: 0.8rpx;
  line-height: 1.5;
  color: #c6c6c6;
}

.column .item {
  display: flex;
  align-items: center;
}

.column-number {
  display: flex;
}

.item-number {
  display: flex;
  align-items: center;
  color: #fff;
  background-color: #333;
  margin-right: 10rpx;
}

.item-number-pd {
  padding: 16rpx 24rpx;
}

.item-number image {
  width: 24rpx;
  height: 24rpx;
}

.stock-no {
  color: #dd2525;
}
.detail-item-box {
  display: flex;
  align-items: center;
}

.detail-item-money-price {
  padding-left: 10rpx;
}

.column-number-end {
  display: flex;
  justify-content: flex-end;
}

.detail-item-money {
  color: #dab866;
}
.decoration {
  text-decoration: line-through;
}
.detail-item-money-price {
  padding-left: 10rpx;
}

.push-button{
  display: flex;
  justify-content: flex-end;
}
.push{
  display: flex;
