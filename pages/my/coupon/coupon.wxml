<view class="coupon">
<!--没有相关优惠券时显示-->
  <view class='search-no' wx:if="{{ticketList.length <= 0}}">
    <view>
      <image class='scimg' src='../../img/wu.png'></image>
    </view>
    <text>您还没有优惠券~~</text>
  </view>

   <view  class="wrapper {{(index%2 == 0)?'colour-bg2':'colour-bg1'}}" wx:for="{{ticketList}}" wx:for-index="index" wx:for-item="item" wx:key="*this">
        <view class="money">
          <view class="money-text"><text class="money-small">¥</text>{{item.ticket_amount}}</view>        
        </view>
      <view class="conditions" wx:if="{{item.ticket_type == 1}}">
        全场通用
      </view>
      <view class="conditions" wx:if="{{item.ticket_type == 2}}">
        满{{item.satisfy_amount}}可使用
      </view>
      <view class="title">
         有效期：{{item.ticket_start_date}}-{{item.ticket_end_date}}
        </view>

  </view>


