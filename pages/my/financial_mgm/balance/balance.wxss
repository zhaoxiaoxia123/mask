page{
  background:#fff;
}
swiper-tab {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  
}

.swiper-tab-item {
  width: 50%;
  background: #ccc;
}
.show {
  display: block;
}

.hidden {
  display: none;
}


.bottom{
  padding-top:30rpx;
  display: flex;
  justify-content: space-between; 
}


/* 顶部三大功能按钮，固定样式，显示于顶部而不被覆盖  */

.topbar{
	width: 100%;
	height: 90rpx;
}
.topbar-top {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background:#fff;
  border-bottom:1px solid #e4e4e4;
  
}
.topbar-text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.topbar-tab{
  width: auto;
  color: #646464 ;
  padding: 20rpx;
}

.active {
  color:#333;
  border-bottom: 6rpx solid #333;
}


/* 无 */
.search-no {
width: 100%;
display: block;
text-align: center;
padding:100rpx 0;
}
.scimg {
width: 300rpx;
height: 350rpx;
display: inline-block;
background-size: 300rpx;
padding-bottom:20rpx;

}

/* 余额明细 */
.list{
  padding:0 24rpx;
}
.item{
  border-bottom:1px solid #e4e4e4;
  padding:20rpx 0;
}
.item-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item-text{
  color:#8b8b8b;
  padding-top:10rpx;
}
.money{
  font-size:1.2rem;
  font-weight: bold;
}

.item-text .text{
  color:#8b8b8b;
}
.money-add{
  color:#e64340;
}
.balance-item{
  padding:24rpx;
  background:#e4e4e4;
}
.date-scimg{
  width:24rpx;
  height:24rpx;
  padding-left:10rpx;
}
.balance-date{
  display:flex;
  align-items:center;
  padding-bottom:20rpx;
}
.balance-money{
  color:#8b8b8b;
  font-size:0.8rem;
}
.balance-money-text{
  padding-right:16rpx;
}
