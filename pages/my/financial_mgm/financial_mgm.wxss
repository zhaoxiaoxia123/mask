/* æ—  */
.search-no {
width: 100%;
display: block;
text-align: center;
padding:100rpx 0;
}
.scimg {
width: 300rpx;
height: 350rpx;
display: inline-block;
background-size: 300rpx;
padding-bottom:20rpx;

}

.fin-hd{
  background: linear-gradient(180deg, #af9281, #f5f5f5); 
  padding:24rpx;
}
.fin-hd-content{
  background:#fff;
  border-radius:10px;
}
.fin-hd-hd{
  border-bottom:1px solid #e4e4e4;
  padding:40rpx 30rpx;
}
.fin-hd-top{
  display: flex;
  justify-content: center;
  color:#8b8b8b;
  padding:10rpx 0 30rpx 0;
}
.balance{
  display: flex;
  justify-content: center;
  font-size:59rpx;
  font-weight: bold;
}
.detailed{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top:10rpx;
  color:#595959;
}
.detailed image{
  width:14rpx;
  height:24rpx;
  padding-left:30rpx;
}
.fin-hd-bottom image{
  width:14rpx;
  height:24rpx;
}
.fin-hd-btn{
  display: flex;
  justify-content: center;
  padding:50rpx 0;
}
.fin-hd-btn .btn{
  background:#333;
  padding:30rpx 200rpx;
  color:#fff;
  border-radius:10rpx;
}
.fin-hd-bottom{
  display: flex;
  justify-content: space-between;
  padding:30rpx;
  font-weight: bold;
}