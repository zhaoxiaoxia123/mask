/* pages/home/financial_mgm/bank_acc/bank_acc.wxss */
page{
 background: #f5f5f5;
}

.item-list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background:#fff;
  padding:34rpx;
}
.item-content{
  display: flex;
}
.item-text{
  padding-left:40rpx;
}
.item-text .text{
  color:#595959;
}
.item-img{
  width:58rpx;
  height:58rpx;
}
.item-ft image{
  width:14rpx;
  height:24rpx;
}
.item-block{
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #e4e4e4;
}
.column-input{
  display: flex;
  align-items: center;
}
.column-input label{
  font-size:48rpx;
  font-weight: 600;
  padding-right: 20rpx;
}
.column-text{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.column-text .text1{
  font-weight: bold;
}
.column-text .text2{
  color:#8b8b8b;
  padding-top:10rpx;
}
.item-container{
  background: #fff;
  padding: 30rpx;
  color: #595959;
  font-size: 28rpx;
}
.item-container .title{
  padding-bottom:20rpx;
}
.container-btn{
  display: flex;
  justify-content: center;
  margin:120rpx 0 380rpx 0;
}
.container-btn .btn{
  background: #333;
  color:#fff;
  padding:30rpx 240rpx;
  border-radius: 10px;
  font-size:32rpx;
}
.top-border{
  border-top:1px solid #e4e4e4;
}