/* pages/my/my.wxss */

.parent {
  display: flex;
  justify-content: space-between;
  align-content: center;
  padding: 40rpx 20rpx;
  border-radius: 10px;
}

.parent-left {
  display: flex;
  align-content: center;
}

.wx-image_SC1alK {
  width: 124rpx;
  height: 124rpx;
  border-radius: 80rpx;
}

.head-img {
  width: 124rpx;
  height: 124rpx;
  border-radius: 80rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-content: center;
  padding-left: 20rpx;
}

.parent-right {
  display: flex;
  align-items: center;
}

.top {
  display: flex;
}

.name {
  font-size: 1.2rem;
  color: #fff;
  padding-left: 20rpx;
  line-height: 124rpx;
}

.head {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  padding-top: 40rpx;
}

.center-bg {
  display: flex;
  background-color: #fff;
  margin-top: 60rpx;
  border-radius: 10rpx;
  padding: 40rpx;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.2);
}

.center-box {
  text-align: center;
  color: #999;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: transparent;
  font-size: 1rem;
  border-right: 1px solid #e6e6ea;
  padding: 12rpx 0;
}

.box-text {
  font-size: 1.8rem;
  display: block;
  flex-direction: row-reverse;
  color: #333;
  font-weight: 600;
  margin: 0 auto;
}

.center-box image {
  width: 58rpx;
  height: 58rpx;
  padding-bottom: 10rpx;
}

.box-text-img {
  border-right: none;
}

.payment {
  padding: 20rpx 20rpx 0 20rpx;
  margin-top: 20rpx;
  border-radius: 10px;
}

.payment-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30rpx;
}

.payment-list-right image {
  width: 14rpx;
  height: 24rpx;
  padding-left: 10rpx;
}

.payment-center {
  display: flex;
  justify-content: space-around;
  padding-bottom:10rpx;
}

.payment-1 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.payment-1 image {
  padding-bottom: 10rpx;
}

.payment-1 text {
  font-size: 0.8rem;
  padding-top: 10rpx;
}

.money {
  width: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}

.btn {
  background: #ff43da;
  padding: 16rpx 40rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1rem;
}

.orders {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 26rpx 40rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
}

.list {
  text-align: center;
}

.lists {
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 10px;
}

.list-wap {
  display: flex;
  justify-content: space-between;
  padding-top: 40rpx;
  border-bottom: 1px solid #4d4d4d;
  padding-bottom: 40rpx;
}

.border-none {
  border: none;
}

.left {
  display: flex;
  align-items: center;
}

.left image {
  width: 42rpx;
  height: 42rpx;
}

.left text {
  padding-left: 20rpx;
}

.right image {
  width: 14rpx;
  height: 24rpx;
}

/* 遮罩层 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* 弹出层 */

.modalDlg {
  width: 70%;
  position: fixed;
  top: 50px;
  left: 0;
  right: 0;
  z-index: 9999;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 弹出层里面的图片 */

.modalDlg image {
  width: 120px;
  height: 120px;
  margin-top: 30px;
}

