/* 弹出层里面的按钮 */

.ok {
  width: 80px;
  height: 35px;
  background: #44b549;
  line-height: 35px;
  text-align: center;
  color: #fff;
  font-size: 0.8rem;
  margin: 20px auto;
  border-radius: 100px;
}

/* 弹出层里面的文字 */

.text {
  text-align: justify;
  font-size: 0.8rem;
  color: #666;
  width: 180px;
  margin-top: 10px;
}

/* 购物车数量 */

.number {
  position: relative;
  top: -136rpx;
  left: 30rpx;
}

.number text {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  padding: 6rpx;
  border-radius: 50%;
  background-color: #dab866;
  color: #fff;
  text-align: center;
  font-size: 0.6rem;
  vertical-align: middle;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.contact_view {
  width: 30px;
  height: 30px;
  background-color: rgb(60, 255, 0);
  text-align: center;
  align-items: center;
  padding-top: 10px;
  border-radius: 20px;
  line-height: 42px;
  padding: 2px;
}

.cs_button {
  background-color: #404040;
  margin: 0;
  padding: 20rpx;
}

/*底部客服*/

.ftservice {
  position: fixed;
  bottom: 100rpx;
  right: 20rpx;
