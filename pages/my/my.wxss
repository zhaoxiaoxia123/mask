  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
}

.ftservice-text {
  font-size: 0.6rpx;
  color: #fff;
}

.cs_ftservice {
  background-color: #dab866;
  margin: 0;
  padding: 20rpx;
  /* width:58rpx;
  height:58rpx;
