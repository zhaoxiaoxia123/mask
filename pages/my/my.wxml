<!--pages/my/my.wxml-->

<view>

<!-- 遮罩层 -->
<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<!-- 弹出层 -->
<view class="modalDlg" wx:if="{{showModal}}">
<!-- 二维码或其他图片 -->
    <image src='{{qrcode}}'></image>
    <!-- <canvas class='two' canvas-id="qrcode" /> -->
    <text class="text">可扫码进入小程序注册页</text>
    <view bindtap="ok" class="ok">确定</view>
</view>


  <view class='parent'>
    <view class='top'>
      <view class='head' wx:if="{{canGetUserInfo}}">
        <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
      </view>
      <view class='head' wx:if="{{!canGetUserInfo}}">
        <open-data class="wx-image_SC1alK" style="background-size: cover; background-position: center center; background-repeat: no-repeat;" type="userAvatarUrl"></open-data>
        <view class='name'>
          <open-data type="userNickName"></open-data>
        </view>
      </view>
    </view>

    <view class='center-bg'>
      <view class='center-box'>
        <text class="box-text">{{items.point?items.point:0}}</text>
        <text>我的积分</text>
      </view>

      <view class='center-box' bindtap='coupon'>
        <text class="box-text">{{items.ticket_count?items.ticket_count:0}}</text>
        <text>优惠券</text>
      </view>

      <view class='center-box box-text-img' bindtap='member'>
        <image class="box-text " src='../img/vip.png'></image>
        <text>会员中心</text>
      </view>
      <view>
      </view>
    </view>

  </view>

  <!--订单-->
  <view class='payment'>

    <view class='payment-list'>
      <view class='payment-list-left'>
        <text>我的订单</text>
      </view>
      <view class='payment-list-right' data-id="1" bindtap='order'>
        <text>全部订单</text>
        <image src='../img/dv.png'></image>
      </view>
    </view>

    <view class='payment-center'>
      <view class='payment-1' data-id="1" bindtap='order'>
        <image class='payment-img' src="../img/payment1.png"></image>
        <text>待付款({{items.order_count?items.order_count:0}})</text>
      </view>

      <!-- <view class='payment-1'>
        <image class='payment-img' src="../img/payment2.png"></image>
        <text>已付款</text>
      </view> -->

      <view class='payment-1' data-id="3" bindtap='order'>
        <image class='payment-img' src="../img/goods.png"></image>
        <text>待收货</text>
      </view>

      <view class='payment-1' data-id="4" bindtap='order'>
        <image class='payment-img' src="../img/complete.png"></image>
        <text>已完成</text>
      </view>

    </view>
  </view>

  <view class='lists'>

    <view class='list-wap' bindtap='shareApp'>
      <view class='left'>
        <image src='../img/refund.png'></image>
        <text>邀请好友</text>
      </view>
      <view class='right'>
        <image src='../img/dv.png'></image>
      </view>
    </view>

    <view class='list-wap'>
      <view class='left'>
        <image src='../img/refund.png'></image>
        <text>退货退款政策</text>
      </view>
      <view class='right'>
        <image src='../img/dv.png'></image>
      </view>
    </view>

    <view class='list-wap' bindtap='address'>
      <view class='left'>
        <image src='../img/address.png'></image>
        <text>我的地址</text>
      </view>
      <view class='right'>
        <image src='../img/dv.png'></image>
      </view>
    </view>

    <view class='list-wap' bindtap='info'>
      <view class='left'>
        <image src='../img/invoice.png'></image>
        <text>我的发票</text>
      </view>
      <view class='right'>
        <image src='../img/dv.png'></image>
      </view>
    </view>

    <view class='list-wap'>
      <view class='left'>
        <image src='../img/service.png'></image>
        <text>在线客服</text>
      </view>
      <view class='right'>
        <image src='../img/dv.png'></image>
      </view>
    </view>

    <view class='list-wap' bindtap='news'>
      <view class='left'>
        <image src='../img/news.png'></image>
        <text>我的消息</text>
      </view>
      <view class='right'>
        <image src='../img/dv.png'></image>
      </view>
    </view>

  </view>

<!-- <view wx:if="isShare">
<view bindtap='copyCode'>复制邀请码</view>
<view bindtap='showShareQRCode'>邀请二维码</view>
</view> -->
</view>