<view class='size-titletwo col-content'>
  <view class='column bg-box'>
    <label>姓名</label>
    <input placeholder='请输入姓名' bindinput="setNameInput" bindconfirm="search" value='{{name}}'></input>
  </view>
  <view class='column bg-box'>
    <label>手机号</label>
    <input placeholder='请输入十一位手机号码' type="number" bindinput="setPhoneInput" bindconfirm="search" value='{{phone}}' maxlength="11"></input>
  </view>
  <view class='column bg-box'>
    <label>所在地区</label>
    <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
      <view class="picker">
        {{region[0]}}，{{region[1]}}，{{region[2]}}
      </view>
    </picker>
  </view>
  <view class='column bg-box'>
    <label>邮编</label>
    <input placeholder='请输入邮编' type="number" bindinput="setZipInput" value='{{zip}}'></input>
  </view>
  <view class='column bg-box'>
    <label>地址</label>
    <textarea class='address' placeholder='请输入地址' bindinput="setAddressInput" value='{{address}}'></textarea>
  </view>
  <view class='column bg-box'>
    <label style='width:100px;'>设为默认地址</label>
    <radio color='#262626' checked='{{is_default==true}}' bindtap='radiocon'></radio>
  </view>
  <view class='column bg-box' wx:if="{{addressId != 0}}" data-type="del" data-index="{{index}}" data-id="{{item.customer_addr_id}}" bindtap='deleteAddress'>
    <text class="address-delete">删除</text>
  </view>
</view>
