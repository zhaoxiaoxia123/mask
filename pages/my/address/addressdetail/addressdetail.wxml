<!--pages/my/my.wxml-->

<view class='column'>
  <label>姓名</label>
  <input placeholder='请输入内容' bindinput="setNameInput" bindconfirm="search" value='{{name}}'></input>
</view>

<view class='column'>
  <label>手机号</label>
  <input placeholder='请输入内容' bindinput="setPhoneInput" bindconfirm="search" value='{{phone}}'></input>
</view>

<view class='column'>
  <label>所在地区</label>
  <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
    <view class="picker">
      {{region[0]}}，{{region[1]}}，{{region[2]}}
    </view>
  </picker>
</view>

<view class='column'>
  <label>邮编</label>
  <input placeholder='请输入内容' bindinput="setZipInput" value='{{zip}}'></input>
</view>

<view class='column'>
  <label>地址</label>
  <textarea class='address' placeholder='请输入内容'  bindinput="setAddressInput" value='{{address}}'></textarea>
</view>

<view class='column'>
  <label style='width:100px;'>设为默认地址</label>
  <radio color='#112d86' checked='{{is_default==true}}' bindtap='radiocon'></radio>
</view>

<view class="bottom" style='padding:0 10px;'>
  <view class="bottom-operate button" bindtap='submitAddress'>确认</view>
</view>