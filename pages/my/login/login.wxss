
/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}
  
/* 弹出层 */
.modalDlg{
    width: 90%;
    position: fixed;
    top: 80rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #333;
    border-radius:8px;
    display: flex;
    flex-direction: column;
}
.mod-content{
    padding:20rpx;
}
.mod-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:40rpx 20rpx;
  font-size:40rpx;
  background:#404040;
  border-radius: 8px 8px 0 0;
}
.code{
  background:#07C160;
  text-align:center;
  color:#fff;
  border-radius: 8px;
  padding:20rpx 30rpx;
  min-widht:100rpx;
}
.mode{
  width:100%;
  margin:20rpx 0;
}
.mode-green{
  background:#07C160;
}
/* 弹出层里面的图片 */
.two {
  width: 368rpx;
  height: 362rpx;
  display: inline-block;
}
 
/* 弹出层里面的按钮 */
.ok{
  width: 80px;
  height: 35px;
  background: #44b549;
  line-height: 35px;
  text-align: center;
  color: #fff;
  font-size: 15px;
  margin:20px auto;
  border-radius: 100px;
}
 .no{
  width: 80px;
  height: 35px;
  background: #666;
  line-height: 35px;
  text-align: center;
  color: #fff;
  font-size: 15px;
  margin:20px auto;
  border-radius: 100px;
}
/* 弹出层里面的文字 */
.text{
  text-align: justify;
  font-size: 14px;
  color: #666;
  width: 180px;
  margin-top: 10px;
}

