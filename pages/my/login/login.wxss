
.login-bp{
  padding:20rpx 40rpx;
}
.timg{
  display: flex;
  justify-content: center;
}
.timg image{
  width:600rpx;
  height:201rpx;
  padding:40rpx 0;
}
.weixin{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.weixin image{
  width:120rpx;
  height:120rpx;
  padding:40rpx;
}
.t1{
  display: flex;
  align-items: center;
  height:100rpx;
  margin-bottom:20rpx;
  padding:0 20rpx;
  border-radius: 4px;
  border:1px solid #4d4d4d;
  background-color:#404040;
}
.t1 image{
  padding-right:20rpx;
}
.t1 text{
  left:40rpx;
  top:40rpx;
  color: #333;
}
.use{
  height:80rpx;
}
.login-reg{
  display:flex;
  color: #c6c6c6;
}
.login-reg view{
  padding-right:20rpx;
}
.login-button{
  padding:40rpx 0;
}
.login-bt{
  line-height: 1.5;
  text-align: center;
  font-size:40rpx;
  padding:20rpx 0;
  margin-bottom:40rpx;
  border-radius:60rpx;
}
.disabled{
  background:#787878 !important;
}
.space-between{
  justify-content: space-between;
}
.col-conten{
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  width: 100%;
  padding-bottom:30rpx;
  font-size:24rpx;
  color:#c6c6c6;
}

/* 颜色 */
.color-golden{
  color:#DAB866;
}
.bcolor-golden{
  background:#DAB866;
  color:#fff;
}
.bcolor-main{
  background: #333;
  color:#fff;
}
.bcolor-white{
  background: #ededed;
  color:#333;
}
/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}
.login-tail{
  padding:0 20rpx 40rpx 20rpx;
}
.login-tail view{
  display: flex;
  justify-content: center;
  align-items: center;
  background:#DAB866;
  padding:20rpx;
  font-size:40rpx;
  border-radius: 10rpx;
  color:#333;
  font-weight: bold;
}
  
/* 弹出层 */
.modalDlg{
    width: 90%;
    position: fixed;
    top: 80rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #333;
    border-radius:8px;
    display: flex;
    flex-direction: column;
}
.mod-content{
    padding:40rpx 20rpx;
}
.mod-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:40rpx 20rpx;
  font-size:40rpx;
  background:#404040;
  border-radius: 8px 8px 0 0;
}
.code{
  background:#07C160;
  text-align:center;
  color:#fff;
  border-radius: 8px;
  padding:20rpx 30rpx;
  min-widht:100rpx;
}
.mode{
  width:100%;
  margin:20rpx 0;
}
.mode-green{
  background:#07C160;
}

/* 弹出层里面的图片 */
.two {
  width: 368rpx;
  height: 362rpx;
  display: inline-block;
}
 
/* 弹出层里面的按钮 */
.ok{
  width: 80px;
  height: 35px;
  background: #44b549;
  line-height: 35px;
  text-align: center;
  color: #fff;
  font-size: 15px;
  margin:20px auto;
  border-radius: 100px;
}
 .no{
  width: 80px;
  height: 35px;
  background: #666;
  line-height: 35px;
  text-align: center;
  color: #fff;
  font-size: 15px;
  margin:20px auto;
  border-radius: 100px;
}
/* 弹出层里面的文字 */
.text{
  text-align: justify;
  font-size: 14px;
  color: #666;
  width: 180px;
  margin-top: 10px;
}

