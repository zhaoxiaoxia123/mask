
.lists{
  box-sizing: border-box;
}
.goods{
  display: flex;
  justify-content: space-around;
  align-items:center;
  background:#404040;
  color:#c6c6c6;
  font-size:28rpx;
  line-height:1.5;
  padding:20rpx;
}
.goods-add{
  padding:20rpx;
  background:#404040;
}
.goods-content{
  display: flex;
  align-items:center;
  width:80%;
}
.address{
 color:#c6c6c6 ;
}
.goods-name{
  display: flex;
  align-content: center;
  align-items: center;
}
.goods-image image{
  width:14px;
  height:24px;
}
.name{
  color:#fff;
  font-size:32rpx;
}
.goods-text{
  padding-left: 40rpx;
}

.list{
   padding: 20rpx;
   background: #404040;
   box-sizing: border-box;
   display: flex;
   flex-direction: row;
   border-bottom: 1px solid #333;

}
.order{
margin-top: 20rpx;
padding: 20rpx;
border-bottom: 1px solid #333;
color:#c6c6c6;
background: #404040;
}
.list-left{
  width:30%;
}

.list-left image{
  border: 1px solid #c6c6c6;
  width:180rpx;
  height:180rpx;
  border-radius:10px;
}
.list-right{
  display: flex;
  flex-direction: column;
  width:66%;
  height:100%;
  color: #c6c6c6;
  padding-left:20rpx;
}
.right-text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color:#fff;
  font-size:40rpx;
}

.item{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sale{
  color:#DAB866;
  font-size:40rpx;
  line-height:1.5;
}

.abstract{
  font-size: 28rpx;
   display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  width:70%;
}
.gift{
  background:#404040;
  color:#DAB866;
  font-size:32rpx;
  padding:40rpx 20rpx;
}
.space{
  margin-bottom:90rpx;
}
/*底部操作栏*/
.bottom{
	width: 100%;
	height: 90rpx;
  position: fixed;
	bottom: 0;
	display: block;
}
.bottom-operate{
	width: 100%;
	height: 90rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
  font-size: 32rpx;
  background-color: #333;
  border-top: 1px solid #404040;
  color:#c6c6c6;
}
.bottom-left{
	width: 100%;
	height: 90rpx;
	display: flex;
	justify-content: left;
	flex-direction: row;
	align-items: center;
  font-size: 32rpx;
  background-color: #FFF;
  color: #c6c6c6 ;
}

.bottom-operate .price{
  padding-left: 50rpx;
	width: 70%;
	height: 100%;
  color:#DAB866;
}

.bottom-operate .button{
  padding-left: 80rpx;
   width: 30%;
	height: 100%;
  color:#FFF;
}


/* 优惠券 */
.coupon{
  background-color:#404040;
  margin-top:20rpx;
}
.coupon-wap{
  display:flex;
  justify-content:space-between;
  padding:40rpx 20rpx;
  
}
.coupon-left{
  display: flex;
  align-items: center;
}
.coupon-left image{
  width: 42rpx;
  height:42rpx;
}
.coupon-left text{
  font-size:28rpx;
  color:#c6c6c6;
}
.coupon-right{
   color:#c6c6c6;
}
.coupon-right text{
  padding-right: 20rpx;
}
.coupon-right image{
  width:14rpx;
  height:24rpx;
}


/* 弹窗 */
.just{
  margin: 0px;
  padding: 0px;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 30%;
  align-items: center;
  background: #404040;
  border-radius: 6rpx;
  justify-content: center;
  z-index: 999;
}
.just1{
  margin: 0px;
  padding: 0px;
  width: 100%;
  height: 30%;
  position: fixed;
  top: 0%;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 6rpx;
  justify-content: center;
  z-index: 999;
}

.y{
display: none;
}
.just .list-left{
  padding-right: 40rpx;
  width:20%;
  height:80px;
}
.just .sale{
  color:#DAB866;
  font-weight:bold;
  font-size:24rpx;
  line-height:1.5;
  width: 80px;
}
.just .list-right{
  padding: 20rpx;
  width:60%;
  height:100%;
  padding-left:36rpx;
  display: flex;
  flex-direction: column;
}
.just .spec{
  padding: 20rpx;
  font-size: 24rpx;
  line-height:1.5;
  color:#c6c6c6;
}
.just .btn{
  padding: 5rpx 15rpx;
  margin: 10rpx;
  font-size: 24rpx;
  line-height:1.5;
  width: 100px;
}
.sel{
  border: 1px #DAB866 solid;
}
.detail-img{
  width:32%;
  padding: 10rpx;
}
.detail-img image{
  width:200rpx;
  height:200rpx;
  border-radius:10px;
  border:1px solid #c6c6c6;
}
.detail-center{
  width:100%;
}
.sales{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.detail-sales{
  font-size:40rpx;
  color:#c6c6c6;
  line-height: 2;
}
.decoration{
  text-decoration: line-through;
}
.text-size{
   font-size:32rpx;
   line-height: 2;
   color:#c6c6c6;
}
.sales-spec{
  font-size:32rpx;
  line-height:1.5;
  color:#DAB866;
}
.just .column{
   display: flex;
   flex-direction: row;
  justify-content: space-between;
  color: #c6c6c6;
  padding:20rpx;
}
.column .item{
  display: flex;
  align-items:center;
}
.item-number{
  padding:10rpx 20rpx;
  background-color:#333;
  margin-right:10rpx;
}
.item-number image{
  width:24rpx;
  height:24rpx;
}
.lists{
  box-sizing: border-box;
}
