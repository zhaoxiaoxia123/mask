<!--pages/detail/detail.wxml-->
<view class="view-page size-text">
	<!-- wx:if="{{isShowTopBar}}" -->
	<navbar selectTab="{{nowstatus}}" tabCount="4" bind:icre="clickTab"></navbar>
	<!-- <navbar page-name="详情页" tabCount="1" wx:if="{{!isShowTopBar}}"></navbar> -->
	<scroll-view class='page-content' style="height:{{winHeight}}" scroll-into-view="{{toview}}" scroll-y="true" scroll-with-animation="true" bindscroll="scroll" bindtouchstart="touchStart" bindtouchend="touchEnd">
		<view id="product">
			<swiper indicator-dots="{{indicatorDots}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" style='height:750rpx;background:#fff'>
			<swiper-item>
          <video
            class="swiper-item"
            show-play-btn="{{true}}"
            controls="{{true}}"
            objectFit="cover" 
            loop='{{false}}'
            show-mute-btn='{{true}}'
            vslide-gesture-in-fullscreen='{{true}}'
            src="https://donglingzhimei-bucket.oss-cn-beijing.aliyuncs.com/video/402ce54f699ba9acf8d70c08e0515057.mp4" 
          ></video>
          </swiper-item>
				<block wx:for="{{swipers}}" wx:key="*this">
					<swiper-item wx:if="{{item.type == 1}}">
						<image mode="widthFix" src="{{item.image_url}}" class="slide-image" />
					</swiper-item>
				</block>
			</swiper>
      <view class="activity">
      <!-- 活动结束显示图片 -->
        <!-- <image mode="widthFix" src='../img/member/V001.jpg' style="width:100%;"></image> -->
         <!-- 活动图片 -->
        <image mode="widthFix" src='../img/member/V000.jpg' style="width:100%;"></image>
        
        <view class="activity-box">
          <!-- 活动中增加：activity-item-active -->
            <view class="activity-item activity-item-active">
              <view class="activity-item-left">
                <view class="">
                  <!-- 显示内容：
                  新人：新人首单价
                  VIP： VIP抢购价
                  SVIP： SVIP抢购价 
                  以此类推
                  -->
                  <text>新人首单价</text> 
                  <!-- 二选一 -->
                  <text  class="activity-state activity-state-active">活动中</text>
                  <!-- <text  class="activity-state">活动已结束</text> -->
                </view>
                <view class="detail-item-box">
                    <view class=" wei" >
                      <text>￥</text>
                      <text class="size-money ">{{items.customer_amount}}</text>
                      <text >.00</text>
                    </view>
                    <view class="detail-item-money-price" >
                      <text class="decoration">￥{{items.frozeno_discount_amount}}</text>
                    </view>
                </view>
              </view>
              <view class="activity-item-right">
                  <!-- 活动结束显示 -->
                 <!-- <view >
                    <view class="activity-border size-tagging">每天{{items.frozeno_start_date}}点开抢</view>
                 </view> -->
                 <!-- 活动中显示 ：剩余数量为0，表示已结束。切换为灰色-->
                 <view>
                    <!-- <view class="activity-border size-tagging">剩余：{{(items.frozeno_promotion_count - items.sale) > 0 ?(items.frozeno_promotion_count - items.sale) : 0 }}件</view> -->
                    <view class="activity-border size-tagging">剩余：{{items.frozeno_promotion_count - items.sale}}件</view>
                 </view>
              </view>
            </view>

        </view>
      </view>


      <view class="detail-item page-pd">
        <!-- 活动结束显示 -->
        <view class="detail-item-box" wx:if="{{items.customer_amount > 0 && level != 1}}">
            <view class="detail-item-money wei">
              <text>￥</text>
              <text class="size-money ">{{items.customer_amount}}</text>
              <text >.00</text>
            </view>
            <view class="detail-item-money-price">
              <text class="decoration">( 市场价：</text>
              <text class="decoration">￥{{items.frozeno_discount_amount}}</text>
              <text class="decoration">)</text>
            </view>
        </view>

        <view class="money-title">{{items.category_desc}}</view>

        <view class='money-text'>
					<text>成长值：{{items.growth}}</text>
					<text>积分：{{items.point}}</text>
				</view>

        <view class="detail-item-abstract">{{items.frozeno_introduction}}</view>
				<view class="detail-item-between">
					<text class="detail-item-color">免邮</text>
					<text class="detail-item-color">销量：{{items.sale}}件</text>
				</view>
      
      </view>

      <view  class="page-pd set-meal">
          <view class="money-title">搭配商品</view>
          <view class="set-meal-box">
              <view class="set-meal-item">
                  <view class="set-meal-bar">
                      <view class="radio-group" >
                        <radio color='#262626' checked="true"></radio>
                      </view>
                      <view class="set-meal-left">
                        <image src="../img/main2.jpg" ></image>
                      </view>
                      <view class="set-meal-right">
                        <view  class="set-meal-title">冻龄智美钛金属导入仪</view>
                      <view class="set-meal-money">
                            <view class="set-meal-money-left">
                              <view class="detail-item-money wei">
                                <text>￥</text>
                                <text class="size-money ">389</text>
                                <text >.00</text>
                                <text class="set-meal-rent">(押金)</text>
                              </view>
                              <view class="detail-item-money-price">
                                <text class="decoration">市场价￥998.00</text>
                              </view>
                          </view>
                          <view class="set-meal-money-right" style="font-size:1.2rem;">×1</view>
                      </view>
                    </view>

                  </view>
              </view>

              <view class="gift">
                <text>赠送USB补水仪× 1</text>
              </view>

               <view class="gift">
                <text>赠送美容硅胶刷× 1</text>
              </view>

          </view>
          <!-- <view class='money-text' wx:for="{{items.gift}}" wx:key="*this" wx:for-item="g">
            <view class='radio-group' wx:if="{{g.category_id == items.dry_category_id}}">
              <radio color='#262626' data-amount="{{items.dry_amount}}" data-id="{{g.category_id}}" bindtap='checkDry' checked='{{items.is_check_dry == 1}}'></radio>
              <text>{{g.category_desc}}:{{items.dry_amount}}</text>
            </view>
            <view class='radio-group' wx:if="{{g.category_id != items.dry_category_id && items.is_check_dry == 1}}">
              <text>{{g.category_desc}}:￥{{g.frozeno_discount_amount}}[￥{{g.frozeno_amount}}]</text>
            </view>
          </view> -->
        </view>
      </view>


		<!-- <view class='spec' bindtap="toggleDialog">
    <text>选择规格</text>
    <image src='../img/dv.png'></image>
  </view> -->
		<view class='evaluate'>
			<view class="detail">
				<!-- <view class='detail-image' id="product">
					<block wx:for="{{swipers}}" wx:key="*this" wx:for-index="index">
            <image mode="widthFix" wx:if="{{item.type == 2 && item.detail_type == 1}}" src="{{item.image_url}}" lazy-load></image>
          </block>
				</view> -->
				<view class='detail-image' id="detail">
					<block wx:for="{{swipers}}" wx:key="*this">
						<image mode="widthFix" wx:if="{{item.type == 2 && item.detail_type == 1}}" src="{{item.image_url}}" lazy-load></image>
					</block>
				</view>
				<view class='detail-image' id="about">
					<block wx:for="{{swipers}}" wx:key="*this" wx:for-index="index">
						<image mode="widthFix" wx:if="{{item.type == 2 && item.detail_type == 2}}" src="{{item.image_url}}" lazy-load></image>
					</block>
				</view>
			</view>

		</view>

		<view class='bottom'>
			<view class='bottom-operate'>
				<view class='bottom-left count'>
					<button class="cs_button" type="default-light" open-type="contact" session-from="weapp">
						<image class="icon40" src="../img/service@2x.png"></image>
					</button>
				</view>
				<view class='bottom-left count' catchtap="shoppingList">
					<view class='number' wx:if="{{shoppingCount}}">
						<text>{{shoppingCount}}</text>
					</view>
					<button class="cs_button">
						<image class="icon40" src="../img/shopcat1_false@2x.png"></image>
					</button>
				</view>
				<!-- <view class='bottom-left count' catchtap="shoppingList">
        <view class='number' wx:if="{{shoppingCount}}">
          <text>{{shoppingCount}}</text>
        </view>
        <image class='icon40' src='../img/shopcat_false.png'></image>
      </view> -->
				<view class='bottom-operate button1' catchtap='joinShopping' wx:if="{{isClick}}">加入购物</view>
				<view class='bottom-operate button1' wx:if="{{!isClick}}">加入购物</view>
				<view class='bottom-operate button' data-type="one" catchtap='goConfirm'>立即购买</view>
			</view>
		</view>
		<view class="just1 {{flexwindow==true?'': 'y'}}" bindtap='close'></view>
		<view class="just {{flexwindow==true?'': 'y'}}">
			<!--bindtap绑定事件-->
			<view class='lists'>
				<view class='list'>
					<view class='detail-img'>
						<image src='{{swipers[0].image_url}}'></image>
					</view>
					<view class='detail-center'>
						<view class='sales'>
							<view class='detail-sales'>{{items.category_desc}}</view>
							<image class='icon40' src='../img/close@2x.png' bindtap='close'></image>
						</view>
						<view class='sales-spec'>
							<text>￥{{items.frozeno_discount_amount}}（</text>
							<!-- <text class='decoration'>￥{{items.frozeno_amount}}</text> -->
							<text>）</text>
						</view>
						<view class='text-size'>库存：{{items.stock}}</view>
					</view>
				</view>
				<view class='column'>
					<view>购买数量</view>
					<view class='item'>
						<view class='item-number'>
							<image class='' data-id='{{items.category_id}}' src='../img/reduce@2x.png' bind:tap="jianFn"></image>
						</view>
						<view class='item-number'>{{count}}</view>
						<view class='item-number'>
							<image class='' data-id='{{items.category_id}}' src='../img/plus@2x.png' bind:tap="plusFn"></image>
						</view>
					</view>
				</view>
			</view>

			<view class='bottom'>
				<view class='bottom-operate'>
					<view class='bottom-left count'>
						<button class="cs_button" type="default-light" open-type="contact" session-from="weapp">
							<image class="icon40" src="../img/service@2x.png"></image>
						</button>
						<!-- <contact-button type="default-light" size="20" session-from="weapp"></contact-button> -->
					</view>
					<view class='bottom-left count' catchtap="shoppingList">
						<view class='number' wx:if="{{shoppingCount}}">
							<text>{{shoppingCount}}</text>
						</view>
						<button class="cs_button">
							<image class="icon40" src="../img/shopcat1_false@2x.png"></image>
						</button>
					</view>
					<view class='bottom-operate button1' catchtap='joinShopping' wx:if="{{isClick}}">加入购物</view>
					<view class='bottom-operate button1' wx:if="{{!isClick}}">加入购物</view>
					<view class='bottom-operate button' data-type="more" catchtap='goConfirm'>立即购买</view>
				</view>
			</view>
		</view>
	</scroll-view>
</view>