<!--pages/detail/detail.wxml-->
<view>
  <swiper indicator-dots="{{indicatorDots}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" style='height:600rpx;background:#fff'>
    <block wx:for="{{swipers}}" wx:key="*this">
      <swiper-item>
        <image src="{{item.img_url}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>

  <view class='page-pd'>
      <view class='money'>

               <text>优惠价￥{{items.discount_amount}}</text>
               <text class='text-size'>（</text>
               <text class='decoration text-size'>￥{{items.amount}}</text>
               <text class='text-size'> ）</text>
             <!-- <text >优惠价</text>
            <text class='account'></text> -->
  
      </view>
      <view class='money-title'>无创水光套装</view>
       <view class='money-text'>
            <text>成长值：3</text>
            <text>积分：32</text>
       </view>
      <view class='abstract'>探究奢华的产品质感，只为遇见最珍贵的您 紧致肌肤 收缩毛孔 提亮肤色 改善肤质 即刻保持肌肤年轻的秘密</view>
      <view class='abstract'>免邮</view>
       <view class='between'>
       <text class='num'>销量：{{items.sale}}件</text>
       <text class='num'>剩余：443件</text>
       </view>


  
</view>

 <view class='spec' bindtap="toggleDialog">
    <text >选择规格</text>
    <image src='../img/dv.png'></image>
  </view>


  <view class='evaluate'>

    <view class='detail'> 商品详情 </view>
    <view class='img'>
      <image  src='../img/details2.jpg'></image>
      <image  src='../img/details2.jpg'></image>
      <image  src='../img/details2.jpg'></image>
     
    </view>
     <text class='abstract'>{{items.description}}</text>
  </view>

  <view class="bottom">
    <view class="bottom-operate">
      <view class="bottom-left count">
        <image class='icon58' src='../img/service.png'></image>
      </view>
      <view class="bottom-left count" catchtap="shoppingList">
        <image class='icon58' src='../img/shopcat_false.png'></image>
      </view>
      <view class="bottom-operate button1" catchtap='joinShopping'>加入购物</view>
      <view class="bottom-operate button" catchtap='joinOrder'>立即购买</view>
    </view>
  </view>
  <view class="just1 {{flexwindow==true?'': 'y'}}" bindtap='close'></view>
  <view class="just {{flexwindow==true?'': 'y'}}">
    <!--bindtap绑定事件-->
    <view class='lists'>
      <view class='list'>

      <view class='detail-img'><image  src='{{swipers[0].img_url}}'></image> </view>
        <view  class='detail-center'>
          <view class='sales'>
            <view class='detail-sales'>{{items.product_name}}</view>
            
            <image class='icon40' src='../img/close@2x.png' bindtap='close'></image>
          </view>
          <view class='sales-spec'>
               <text>优惠价￥{{items.discount_amount}}（</text>
               <text class='decoration'>￥{{items.amount}}</text>
               <text>）</text>

            </view>
          <view class='text-size'>库存：443</view>
        </view>
      </view>

      <view class='column' >
        <view >购买数量</view>
        <view class='item'>
             <view class='item-number'><image class='' data-id='{{items.product_id}}' src='../img/reduce@2x.png' bind:tap="jianFn"></image>
             </view>
             <view class='item-number' >{{count}}</view>
             <view class='item-number'> <image class='' data-id='{{items.product_id}}' src='../img/plus@2x.png' bind:tap="plusFn"></image>
             </view>
         
        </view>
       
      </view>
    </view>

    <view class="bottom">
      <view class="bottom-operate">
        <view class="bottom-left count">
          <image class='icon58' src='../img/service.png'></image>
        </view>
        <view class="bottom-left count" catchtap="shoppingList">
          <image class='icon58' src='../img/shopcat_false.png'></image>
        </view>
        <view class="bottom-operate button1" catchtap='joinShopping'>加入购物</view>
        <view class="bottom-operate button" catchtap='joinOrder'>立即购买</view>
      </view>
    </view>

  </view>
</view>