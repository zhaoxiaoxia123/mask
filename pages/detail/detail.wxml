<!--pages/detail/detail.wxml-->
<view class="view-page size-text">
	<!-- wx:if="{{isShowTopBar}}" -->
	<navbar selectTab="{{nowstatus}}" tabCount="4" bind:icre="clickTab"></navbar>
	<!-- <navbar page-name="详情页" tabCount="1" wx:if="{{!isShowTopBar}}"></navbar> -->
	<scroll-view class='page-content' style="height:{{winHeight}}" scroll-into-view="{{toview}}" scroll-y="true" scroll-with-animation="true" bindscroll="scroll" bindtouchstart="touchStart" bindtouchend="touchEnd">
		<view id="product">
			<swiper indicator-dots="true" indicator-color="#000000" indicator-active-color="#b7aa00" autoplay="false" interval="3000" duration="500" circular="true" style='height:750rpx;background:#fff'>
				<swiper-item wx:if="{{!isOver && items.customer_amount_before == experience_amount && items.category_id == experience_id}}">
					<video class="swiper-item" show-play-btn="{{true}}" controls="{{true}}" objectFit="cover" loop='{{false}}' show-mute-btn='{{true}}' vslide-gesture-in-fullscreen='{{true}}' src="https://donglingzhimei-bucket.oss-cn-beijing.aliyuncs.com/video/99.mp4"></video>
				</swiper-item>
				<swiper-item wx:if="{{!isOver && items.customer_amount_before != experience_amount && items.category_id == experience_id}}">
					<video class="swiper-item" show-play-btn="{{true}}" controls="{{true}}" objectFit="cover" loop='{{false}}' show-mute-btn='{{true}}' vslide-gesture-in-fullscreen='{{true}}' src="https://donglingzhimei-bucket.oss-cn-beijing.aliyuncs.com/video/168.mp4"></video>
				</swiper-item>
				<swiper-item wx:if="{{!isOver && items.category_id != experience_id}}">
					<video class="swiper-item" show-play-btn="{{true}}" controls="{{true}}" objectFit="cover" loop='{{false}}' show-mute-btn='{{true}}' vslide-gesture-in-fullscreen='{{true}}' src="https://donglingzhimei-bucket.oss-cn-beijing.aliyuncs.com/video/423.mp4"></video>
				</swiper-item>
				<block wx:for="{{swipers}}" wx:key="*this">
					<block wx:if="{{item.is_activity == 2}}">
						<swiper-item wx:if="{{item.type == 1}}">
							<image mode="widthFix" src="{{item.image_url}}" class="slide-image" bindtap="goPost" data-href="{{item.weixin_url}}" wx:if="{{item.is_href == 1}}" />
							<image mode="widthFix" src="{{item.image_url}}" class="slide-image" wx:if="{{item.is_href == 0}}" />
						</swiper-item>
					</block>
					<block wx:if="{{item.is_activity == 1 && isOver}}">
						<swiper-item wx:if="{{item.type == 1}}">
							<image mode="widthFix" src="{{item.image_url}}" class="slide-image" bindtap="goPost" data-href="{{item.weixin_url}}" wx:if="{{item.is_href == 1}}" />
							<image mode="widthFix" src="{{item.image_url}}" class="slide-image" wx:if="{{item.is_href == 0}}" />
						</swiper-item>
					</block>
				</block>
			</swiper>
			<view class="activity" wx:if="{{level >= 1}}">
				<image mode="widthFix" src="{{promotionPicture}}" style="width:100%;"></image>
				<view class="activity-box">
					<view class="activity-item activity-item-active">
						<view class="activity-item-left" wx:if="{{isOver}}">
							<view class="">
								<text>新人首单价</text>
								<text class="activity-state {{showPromotionClass}}">活动结束</text>
							</view>
							<view class="detail-item-box">
								<view class="wei">
									<text>￥</text>
									<block wx:if="{{items.category_id == experience_id}}">
										<text class="size-money">{{experience_amount}}</text>
										<text>.00</text>
									</block>
									<text class="size-money" wx:if="{{items.category_id != experience_id}}">{{items.frozeno_discount_amount1}}</text>
								</view>
								<view class="detail-item-money-price">
									<text class="decoration">￥{{items.frozeno_amount}}</text>
								</view>
							</view>
						</view>
						<view class="activity-item-left" wx:if="{{ ! isOver}}">
							<view class="">
								<text wx:if="{{level == 1}}">新人首单价</text>
								<text wx:if="{{level == 2}}">VIP抢购价</text>
								<text wx:if="{{level == 3}}">SVIP抢购价</text>
								<text wx:if="{{level == 4}}">钻石抢购价</text>
								<text wx:if="{{level == 5}}">执行董事抢购价</text>
								<text wx:if="{{level == 6}}">高级董事抢购价</text>
								<text wx:if="{{level == 7}}">城市合伙人抢购价</text>
								<text class="activity-state {{showPromotionClass}}">{{showPromotionTip}}</text>
							</view>
							<view class="detail-item-box">
								<view class="wei">
									<text>￥</text>
									<text class="size-money ">{{items.customer_amount_before}}</text>
									<text>.{{items.customer_amount_after?items.customer_amount_after:"00"}}</text>
								</view>
								<view class="detail-item-money-price">
									<text class="decoration">￥{{items.frozeno_amount}}</text>
								</view>
							</view>
						</view>
						<view class="activity-item-right">
							<!-- 活动结束显示 -->
							<view wx:if="{{isOver}}">
								<view class="activity-border size-tagging">每天{{items.frozeno_start_date}}点开抢</view>
							</view>
							<view wx:if="{{ ! isOver}}">
								<view class="activity-border size-tagging">剩余：{{surplusSale}}件</view>
							</view>
						</view>
					</view>
				</view>
			</view>

			<view class="detail-item page-pd">
				<!-- 活动结束和未登录显示 -->
				<view class="detail-item-box" wx:if="{{isOver || level == 0}}">
					<block wx:if="{{level >= 1}}">
						<view class="detail-item-money wei">
							<text>￥</text>
							<text class="size-money ">{{items.customer_amount_before}}</text>
							<text>.{{items.customer_amount_after?items.customer_amount_after:"00"}}</text>
						</view>
						<view class="detail-item-money-price">
							<text class="decoration">( 市场价：</text>
							<text class="decoration">￥{{items.frozeno_amount}}</text>
							<text class="decoration">)</text>
						</view>
					</block>
					<block wx:if="{{level == 0}}">
						<view class="detail-item-money wei">
							<text>市场价：</text>
							<text class="size-money ">{{items.frozeno_amount}}</text>
						</view>
						<view bindtap="goLogin">(登录参加活动)</view>
					</block>
				</view>
				<view class="money-title">{{items.category_desc}}</view>
				<view class='money-text'>
					<text>成长值：{{items.growth}}</text>
					<!-- <text>积分：{{items.point}}</text> -->
				</view>
				<view class="detail-item-abstract">{{items.frozeno_introduction}}</view>
				<view class="detail-item-between">
					<text class="detail-item-color">免邮</text>
					<text class="detail-item-color">销量：{{items.sale}}件</text>
				</view>
			</view>

			<view class="page-pd set-meal" wx:if="{{items.gift.length > 0}}">
				<view class="money-title">搭配商品</view>
				<view class="set-meal-box" wx:for="{{items.gift}}" wx:key="*this" wx:for-item="g">
					<view class="set-meal-item" wx:if="{{g.category_id == items.dry_category_id}}">
						<view class="set-meal-bar">
							<view class="radio-group">
								<radio color='#262626' data-amount="{{items.dry_amount}}" data-id="{{g.category_id}}" bindtap='checkDry' checked='{{items.is_check_dry == 1}}'></radio>
							</view>
							<view class="set-meal-left">
								<image src="{{g.product_image[0].image_url}}"></image>
							</view>
							<view class="set-meal-right">
								<view class="set-meal-title">{{g.category_desc}}</view>
								<view class="set-meal-money">
									<view class="set-meal-money-left">
										<view class="detail-item-money wei" wx:if="{{items.dry_amount == 389}}">
											<text>￥</text>
											<text class="size-money ">{{items.dry_amount}}</text>
											<text >.00</text>
											<text class="set-meal-rent">(押金)</text>
										</view>
										<view class="detail-item-money wei" wx:if="{{items.dry_amount != 389}}">
											<text>￥</text>
											<text class="size-money ">{{items.dry_amount}}</text>
											<text >.00</text>
										</view>
										<view class="detail-item-money-price">
											<text class="decoration">市场价￥{{g.frozeno_amount}}</text>
										</view>
									</view>
									<view class="set-meal-money-right" style="font-size:1.2rem;">×1</view>
								</view>
							</view>
						</view>
					</view>
					<view class="gift" wx:if="{{g.category_id != items.dry_category_id}}">
						<text>{{g.category_desc}}× 1</text>
					</view>
				</view>
			</view>
		</view>
		<!-- <view class='spec' bindtap="toggleDialog">
    <text>选择规格</text>
    <image src='../img/dv.png'></image>
  </view> -->
		<view class='evaluate'>
			<view class="detail">
				<view class='detail-image' id="detail">
					<block wx:for="{{swipers}}" wx:key="*this">
						<image mode="widthFix" wx:if="{{item.type == 2 && item.detail_type == 1}}" src="{{item.image_url}}" lazy-load></image>
					</block>
				</view>
				<view class='detail-image' id="about">
					<block wx:for="{{swipers}}" wx:key="*this" wx:for-index="index">
						<image mode="widthFix" wx:if="{{item.type == 2 && item.detail_type == 2}}" src="{{item.image_url}}" lazy-load></image>
					</block>
				</view>
			</view>
		</view>

		<view class='bottom'>
			<view class='bottom-operate'>
				<view class='bottom-left count'>
					<button class="cs_button" type="default-light" open-type="contact" session-from="weapp">
						<image class="icon40" src="../img/service@2x.png"></image>
					</button>
				</view>
				<view class='bottom-left count' catchtap="shoppingList">
					<view class='number' wx:if="{{shoppingCount}}">
						<text>{{shoppingCount}}</text>
					</view>
					<button class="cs_button">
						<image class="icon40" src="../img/shopcat1_false@2x.png"></image>
					</button>
				</view>
				<!-- <view class='bottom-left count' catchtap="shoppingList">
        <view class='number' wx:if="{{shoppingCount}}">
          <text>{{shoppingCount}}</text>
        </view>
        <image class='icon40' src='../img/shopcat_false.png'></image>
      </view> -->
				<view class='bottom-operate button1' catchtap='joinShopping' wx:if="{{isClick}}">加入购物</view>
				<view class='bottom-operate button1' wx:if="{{!isClick}}">加入购物</view>
				<view class='bottom-operate button' data-type="one" catchtap='goConfirm'>立即购买</view>
			</view>
		</view>
		<view class="just1 {{flexwindow==true?'': 'y'}}" bindtap='close'></view>
		<view class="just {{flexwindow==true?'': 'y'}}">
			<!--bindtap绑定事件-->
			<view class='lists'>
				<view class='list'>
					<view class='detail-img'>
						<image src='{{swipers[0].image_url}}'></image>
					</view>
					<view class='detail-center'>
						<view class='sales'>
							<view class='detail-sales'>{{items.category_desc}}</view>
							<image class='icon40' src='../img/close@2x.png' bindtap='close'></image>
						</view>
						<view class='sales-spec'>
							<text>￥{{items.frozeno_discount_amount}}（</text>
							<!-- <text class='decoration'>￥{{items.frozeno_amount}}</text> -->
							<text>）</text>
						</view>
						<view class='text-size'>库存：{{items.stock}}</view>
					</view>
				</view>
				<view class='column'>
					<view>购买数量</view>
					<view class='item'>
						<view class='item-number'>
							<image class='' data-id='{{items.category_id}}' src='../img/reduce@2x.png' bind:tap="jianFn"></image>
						</view>
						<view class='item-number'>{{count}}</view>
						<view class='item-number'>
							<image class='' data-id='{{items.category_id}}' src='../img/plus@2x.png' bind:tap="plusFn"></image>
						</view>
					</view>
				</view>
			</view>

			<view class='bottom'>
				<view class='bottom-operate'>
					<view class='bottom-left count'>
						<button class="cs_button" type="default-light" open-type="contact" session-from="weapp">
							<image class="icon40" src="../img/service@2x.png"></image>
						</button>
						<!-- <contact-button type="default-light" size="20" session-from="weapp"></contact-button> -->
					</view>
					<view class='bottom-left count' catchtap="shoppingList">
						<view class='number' wx:if="{{shoppingCount}}">
							<text>{{shoppingCount}}</text>
						</view>
						<button class="cs_button">
							<image class="icon40" src="../img/shopcat1_false@2x.png"></image>
						</button>
					</view>
					<view class='bottom-operate button1' catchtap='joinShopping' wx:if="{{isClick}}">加入购物</view>
					<view class='bottom-operate button1' wx:if="{{!isClick}}">加入购物</view>
					<view class='bottom-operate button' data-type="more" catchtap='goConfirm'>立即购买</view>
				</view>
			</view>
		</view>
	</scroll-view>
</view>