  text-align: center;
}
.menu .item.on{
  color:#DAB866;
  border-bottom:2px solid #DAB866;
}



.slide-image {
  width:100%;
}


.account{
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  text-decoration:line-through;
  padding-left:36rpx;
  color:#c6c6c6;
}


.time{
  padding-right: 10rpx;
  color:#c6c6c6;
}



.title {
  padding: 20rpx 20rpx 0 20rpx;
  background: #fff;
}

.spec {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
