  flex-direction: column;
}
.img image{
  width: 100%;
}
.bottom{
  display: flex;
  position: fixed;
  bottom: 0;
  background: #FFF;
  width: 100%;
}
.navback{
  align-items: center;
  width: 20%;
  padding: 20rpx 0;
  justify-content: center;
  text-align: center;
}
.shop-money{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgb(233, 168, 168);
  width: 40%;
}
.shop-money view{
  color: #FFF;
}
.order{
  display: flex;
  justify-content: center;
  align-items: center;
  background: #DAB866;
  width: 40%;
  color: #FFF;
}
/* 弹窗 */
.just{
  margin: 0px;
  padding: 0px;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 30%;
  align-items: center;
  background: #404040;
  border-radius: 6rpx;
  justify-content: center;
  z-index: 999;
}
.just1{
  margin: 0px;
  padding: 0px;
  width: 100%;
  height: 30%;
  position: fixed;
  top: 0%;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 6rpx;
  justify-content: center;
  z-index: 999;
}

.y{
display: none;
}
.just .list-left{
  padding-right: 40rpx;
  width:20%;
  height:80px;
}
.just .sale{
  color:#DAB866;
  font-weight:bold;
  width: 80px;
}
.just .list-right{
  padding: 20rpx;
  width:60%;
  height:100%;
  padding-left:36rpx;
  display: flex;
  flex-direction: column;
}
.just .spec{
  padding: 20rpx;
  color:#c6c6c6;
}
.just .btn{
  padding: 5rpx 15rpx;
  margin: 10rpx;
  width: 100px;
}
.sel{
  border: 1px #DAB866 solid;
}
.detail-img{
  width:32%;
  padding: 10rpx;
}
.detail-img image{
  width:200rpx;
  height:200rpx;
  border-radius:10px;
  border:1px solid #c6c6c6;
}
.detail-center{
  width:62%;
}
.sales{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.detail-sales{
  color:#c6c6c6;
}
.decoration{
  text-decoration: line-through;
}
.sales-spec{
  color:#DAB866;
}
.just .column{
   display: flex;
   flex-direction: row;
  justify-content: space-between;
  color: #c6c6c6;
  padding:20rpx;
}
.column .item{
  display: flex;
  align-items:center;
}
.item-number{
  padding:10rpx 20rpx;
  background-color:#333;
  margin-right:10rpx;
}
.item-number image{
  width:24rpx;
  height:24rpx;
}
.lists{
  box-sizing: border-box;
}


/*底部操作栏*/
.bottom{
  position: fixed;
	bottom: 0;
	display: block;
	width: 100%;
	height: 90rpx;
  background: #333;
  border-top:1px solid #404040;
}
.bottom-operate{
	width: 100%;
	height: 100rpx;
	display: flex;
	justify-content: center;
	flex-direction: row;
	align-items: center;
  color: #c6c6c6;
}
.bottom-left{
	width: 100%;
	height: 100rpx;
	display: flex;
	justify-content: center;
	flex-direction: row;
	align-items: center;
  line-height:1.5;
  color: #c6c6c6;
}
.bottom-operate .count{
	width: 10%;
	height: 100%;
  padding:0 40rpx;
}
.bottom-operate .button{
	width: 30%;
	height: 100%;
  color:#fff;
  background-color:#DAB866;
}
.bottom-operate .button1{
	width: 30%;
	height: 100%;
  color:#c6c6c6;
  border-left:2px solid #404040;
}

/* 购物车数量 */
.number{
    position: absolute;
    top: -2px;
    left: calc(100% - 504rpx);
    z-index:9;
}
.number text{
    display: inline-block;
    width:28rpx;
    height:28rpx;
    line-height:28rpx;
    padding:6rpx;
    border-radius: 50%;
    background-color: #DAB866;
    color: #FFFFFF;
    text-align: center;
    vertical-align: middle;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}


.cs_button {
  background-color: #333;
  margin:0;
  padding:20rpx;
}


/* tab切换 */
.topbar{
	width: 100%;
  background-color:#404040;
  border-bottom:1px solid #2b2b2b; 
}
.topbar-top {
  display: flex;
  align-items: center;
  color:#c6c6c6;
  
}
.topbar-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding:10rpx;
}
.topbar-tab{
  width: auto;
  padding: 10rpx;
}

.active {
  color:#DAB866;
  font-weight: bold;
}
.show {
  display: block;
}

.hidden {
  display: none;
}

.swiper-item {
  width: 100%;
  height: 100%;
}


