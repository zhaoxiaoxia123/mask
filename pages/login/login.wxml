<view>

  <!-- 遮罩层 请求授权微信 -->
  <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{isBindWechat}}"></view>
  <view class="modalDlg" wx:if="{{isBindWechat}}">
    <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">微信授权登录 </button>
    <button type="primary" lang="zh_CN" open-type='getPhoneNumber'  bindgetphonenumber="getPhoneNumber">手机号授权</button>
      
  </view>

  <!-- 遮罩层 修改密码-- -->
  <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
  <!-- 弹出层 修改密码-->
  <view class="modalDlg" wx:if="{{showModal}}">
    <input placeholder='请输入手机号' bindinput="setPhoneInput" bindconfirm="search" value='{{phone}}'></input>
    <input placeholder='请输入验证码' bindinput="setCodeInput" bindconfirm="search" value='{{code}}'></input>
    <view bindtap="sendCode" class="ok">获取验证码</view>
    <!-- <view class="bottom-operate button" bindtap='sendCode'>获取验证码</view> -->
    <input placeholder='请输入密码' bindinput="setPw1Input" bindconfirm="search" value='{{pw1}}'></input>
    <input placeholder='请输入确认密码' bindinput="setPw2Input" bindconfirm="search" value='{{pw2}}'></input>
    <view bindtap="findPassword" class="ok" wx:if="{{isSubmit}}">确定</view>
    <view class="no" wx:if="{{!isSubmit}}">确定</view>
  </view>

  <!-- 账号密码登录-->
  <view wx:if="{{isLogin}}">
    <input placeholder='请输入手机号' bindinput="setAccountInput" bindconfirm="search" value='{{account}}'></input>
    <input placeholder='请输入密码' bindinput="setPasswordInput" bindconfirm="search" value='{{password}}'></input>
    <view bindtap="showFindPassword">忘记密码？</view>
    <view>
    <checkbox class='checkbox' catchtap="checkBox" checked="{{isCheck == 1}}" >已阅读《智美mall服务协议》</checkbox>
    </view>
    <view bindtap="loginTo" class="ok" wx:if="{{isInput}}">确定</view>
    <view class="no" wx:if="{{!isInput}}">确定</view>
    
  <view>
    <button bindtap="bindWechat">微信登录</button>
    <view bindtap="toRegister">还没有账号？免费注册></view>
  </view>
  </view>

</view>